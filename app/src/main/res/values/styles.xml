<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--toolbar的样式-->
    <style name="tool_bar_theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
    </style>

    <!--toolbar字体的样式-->
    <style name="common_toolbar_title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <!--movie view-->
    <style name="Widget.PictureInPicture.MovieView" parent="android:Widget">
        <item name="android:src">@null</item>
        <item name="android:adjustViewBounds">false</item>
    </style>


</resources>
